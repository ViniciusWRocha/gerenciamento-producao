@model GerenciamentoProducao.Models.FamiliaCaixilho

@{
    ViewData["Title"] = "Nova Família de Caixilho";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0 text-white">Nova Família de Caixilho</h1>
            <p class="text-muted">Criar uma nova família de caixilhos</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Informações da Família</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="DescricaoFamilia" class="form-label">Descrição da Família</label>
                                    <input asp-for="DescricaoFamilia" class="form-control" placeholder="Ex: Janelas de Alumínio" />
                                    <span asp-validation-for="DescricaoFamilia" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label">Peso Total</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" value="0.00 kg" readonly />
                                        <span class="input-group-text">Calculado automaticamente</span>
                                    </div>
                                    <small class="form-text text-muted">O peso será calculado automaticamente baseado nos caixilhos adicionados a esta família.</small>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Criar Família" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
