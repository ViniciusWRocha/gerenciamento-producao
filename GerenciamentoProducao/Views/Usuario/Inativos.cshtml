@model IEnumerable<GerenciamentoProducao.Models.Usuario>

@{
    ViewData["Title"] = "Inativos";
}

<h1>Inativos</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoUsuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Senha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoUsuario)
            </td>
            <td>
                    <!-- Botão para reativar usuário -->
                    <a asp-action="Ativar" asp-route-id="@item.IdUsuario"
                       class="btn btn-sm btn-success">Ativar</a>
                    <!--
                       Tag Helper asp-action="Ativar": chama a Action "Ativar" no UsuarioController
                       asp-route-id: envia o Id do usuário na rota
                    -->
            </td>
        </tr>
}
    </tbody>
</table>
<!-- Botão para voltar à listagem principal -->
<a asp-action="Index" class="btn btn-secondary">Voltar</a>