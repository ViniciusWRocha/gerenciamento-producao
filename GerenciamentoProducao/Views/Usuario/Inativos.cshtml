@model IEnumerable<GerenciamentoProducao.Models.Usuario>

@{
    ViewData["Title"] = "Usuários Inativos";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0 text-white">Usuários Inativos</h1>
            <p class="text-muted">Usuários desativados no sistema</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Lista de Usuários Inativos</h6>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Email</th>
                                    <th>Telefone</th>
                                    <th>Status</th>
                                    <th>Tipo de Usuário</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if(Model != null){

                                
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.NomeUsuario</strong>
                                        </td>
                                        <td>@item.Email</td>
                                        <td>@item.Telefone</td>
                                        <td>
                                            <span class="badge text-bg-danger">
                                                Inativo
                                            </span>
                                        </td>
                                        <td>
                                                <span class="badge badge-info text-black">
                                                @item.TipoUsuario.NomeTipoUsuario
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Ativar" asp-route-id="@item.IdUsuario" class="btn btn-sm btn-success">
                                                    <i class="fas fa-check"></i> Ativar
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.IdUsuario" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                }
                                else{
                                    <tr><td colspan="6">Não disponivel</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>