@model IEnumerable<GerenciamentoProducao.Models.Producao>

@{
    ViewData["Title"] = "Produções";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0 text-white">Produções</h1>
            <p class="text-white">Gerenciamento de produções</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Lista de Produções</h6>
                    <a asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Nova Produção
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Data</th>
                                    <th>Status</th>
                                    <th>Liberado</th>
                                    <th>Usuário</th>
                                    <th>Família</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.NomeProducao</strong>
                                        </td>
                                        <td>@item.DataProducao.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <span class="badge text-bg-@(item.Produzido ? "success" : "warning")">
                                                @(item.Produzido ? "Produzido" : "Pendente")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge text-bg-@(item.EhLiberado ? "success" : "danger")">
                                                @(item.EhLiberado ? "Sim" : "Não")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge badge-info text-black">
                                                @item.Usuario?.NomeUsuario
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge badge-secondary text-black">
                                                @item.FamiliaCaixilho?.DescricaoFamilia
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@item.IdProducao" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.IdProducao" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.IdProducao" class="btn btn-sm btn-danger">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
