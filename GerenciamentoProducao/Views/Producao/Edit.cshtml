@model GerenciamentoProducaoo.ViewModel.ProducaoViewModel


@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-white">Edit</h1>

<h4 class="text-white">Producao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProducao" />
            <div class="form-group">
                <label asp-for="NomeProducao" class="control-label"></label>
                <input asp-for="NomeProducao" class="form-control" />
                <span asp-validation-for="NomeProducao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataProducao" class="control-label"></label>
                <input asp-for="DataProducao" class="form-control" />
                <span asp-validation-for="DataProducao" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Produzido" /> @Html.DisplayNameFor(model => model.Produzido)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EhLiberado" /> @Html.DisplayNameFor(model => model.EhLiberado)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class="form-select" asp-items="Model.Usuario"></select>
                @* <span asp-validation-for="IdUsuario" class="text-danger"></span> *@

            </div>
            <div class="form-group">
                <label asp-for="FamiliaCaixilhoId" class="control-label"></label>
                <select asp-for="FamiliaCaixilhoId" class="form-select" asp-items="Model.FamiliaCaixilho"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
