@model GerenciamentoProducao.Models.RelatorioProducao

@{
    ViewData["Title"] = "Editar Relatório de Produção";
}

<h1>Editar</h1>

<h4>Relatório de Produção</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdRelatorio" />
            <div class="form-group">
                <label asp-for="DataRelatorio" class="control-label"></label>
                <input asp-for="DataRelatorio" class="form-control" type="date" />
                <span asp-validation-for="DataRelatorio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mes" class="control-label"></label>
                <input asp-for="Mes" class="form-control" />
                <span asp-validation-for="Mes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PesoTotalProduzido" class="control-label"></label>
                <input asp-for="PesoTotalProduzido" class="form-control" />
                <span asp-validation-for="PesoTotalProduzido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalCaixilhosProduzidos" class="control-label"></label>
                <input asp-for="TotalCaixilhosProduzidos" class="form-control" />
                <span asp-validation-for="TotalCaixilhosProduzidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalFamiliasProduzidas" class="control-label"></label>
                <input asp-for="TotalFamiliasProduzidas" class="form-control" />
                <span asp-validation-for="TotalFamiliasProduzidas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EficienciaProducao" class="control-label"></label>
                <input asp-for="EficienciaProducao" class="form-control" />
                <span asp-validation-for="EficienciaProducao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TempoMedioProducao" class="control-label"></label>
                <input asp-for="TempoMedioProducao" class="form-control" />
                <span asp-validation-for="TempoMedioProducao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusMeta" class="control-label"></label>
                <select asp-for="StatusMeta" class="form-control">
                    <option value="Em Andamento">Em Andamento</option>
                    <option value="Atingida">Atingida</option>
                    <option value="Não Atingida">Não Atingida</option>
                </select>
                <span asp-validation-for="StatusMeta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label"></label>
                <textarea asp-for="Observacoes" class="form-control"></textarea>
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label"></label>
                <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
