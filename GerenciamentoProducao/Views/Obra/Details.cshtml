@model GerenciamentoProducao.Models.Obra

@{
    ViewData["Title"] = "Detalhes da Obra";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0" style="color: var(--gp-heading-color);">Detalhes da Obra</h1>
            <p style="color: var(--gp-muted-color);">Informações completas da obra</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-info-circle me-2"></i>Informações da Obra
                    </h6>
                    <div>
                        @if (User.IsInRole("Administrador") || User.IsInRole("Gerente"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.IdObra" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                        }
                        <a asp-action="Index" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i> Voltar
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ImagemObraPath))
                    {
                        <div class="text-center mb-4">
                            <img src="@Url.Content("~/" + Model.ImagemObraPath)" alt="Imagem da obra" class="img-fluid rounded shadow-sm" style="max-height: 320px; object-fit: cover; width: 100%;" />
                        </div>
                    }

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="p-3 rounded border" style="background-color: var(--gp-card-accent); border-color: var(--gp-card-border) !important;">
                                <h6 class="text-uppercase small mb-3 fw-bold" style="color: var(--gp-heading-color);">
                                    <i class="fas fa-building me-2"></i>Informações Básicas
                                </h6>
                                <dl class="row mb-0">
                                    <dt class="col-sm-5" style="color: var(--gp-muted-color);">Nome:</dt>
                                    <dd class="col-sm-7 mb-2" style="color: var(--gp-body-color);"><strong>@Model.Nome</strong></dd>

                                    <dt class="col-sm-5" style="color: var(--gp-muted-color);">Construtora:</dt>
                                    <dd class="col-sm-7 mb-2" style="color: var(--gp-body-color);">@Model.Construtora</dd>

                                    <dt class="col-sm-5" style="color: var(--gp-muted-color);">Número:</dt>
                                    <dd class="col-sm-7 mb-2" style="color: var(--gp-body-color);">@Model.Nro</dd>

                                    <dt class="col-sm-5" style="color: var(--gp-muted-color);">CNPJ:</dt>
                                    <dd class="col-sm-7 mb-2" style="color: var(--gp-body-color);">@Model.Cnpj</dd>

                                    <dt class="col-sm-5" style="color: var(--gp-muted-color);">Responsável:</dt>
                                    <dd class="col-sm-7 mb-0" style="color: var(--gp-body-color);">@(Model.Usuario?.NomeUsuario ?? "Não informado")</dd>
                                </dl>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 rounded border" style="background-color: var(--gp-card-accent); border-color: var(--gp-card-border) !important;">
                                <h6 class="text-uppercase small mb-3 fw-bold" style="color: var(--gp-heading-color);">
                                    <i class="fas fa-map-marker-alt me-2"></i>Localização
                                </h6>
                                <dl class="row mb-0">
                                    <dt class="col-sm-5" style="color: var(--gp-muted-color);">Logradouro:</dt>
                                    <dd class="col-sm-7 mb-2" style="color: var(--gp-body-color);">@Model.Logradouro</dd>

                                    <dt class="col-sm-5" style="color: var(--gp-muted-color);">Bairro:</dt>
                                    <dd class="col-sm-7 mb-2" style="color: var(--gp-body-color);">@Model.Bairro</dd>

                                    <dt class="col-sm-5" style="color: var(--gp-muted-color);">CEP:</dt>
                                    <dd class="col-sm-7 mb-2" style="color: var(--gp-body-color);">@Model.Cep</dd>

                                    <dt class="col-sm-5" style="color: var(--gp-muted-color);">UF:</dt>
                                    <dd class="col-sm-7 mb-0" style="color: var(--gp-body-color);">@Model.Uf</dd>
                                </dl>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 rounded border" style="background-color: var(--gp-card-accent); border-color: var(--gp-card-border) !important;">
                                <h6 class="text-uppercase small mb-3 fw-bold" style="color: var(--gp-heading-color);">
                                    <i class="fas fa-chart-line me-2"></i>Status e Progresso
                                </h6>
                                <dl class="row mb-0">
                                    <dt class="col-sm-5" style="color: var(--gp-muted-color);">Status:</dt>
                                    <dd class="col-sm-7 mb-2">
                                        <span class="badge text-bg-@(Model.StatusObra == "Concluída" ? "success" : Model.StatusObra == "Em Andamento" ? "primary" : Model.StatusObra == "Atrasada" ? "danger" : "secondary")">
                                            @Model.StatusObra
                                        </span>
                                    </dd>

                                    <dt class="col-sm-5" style="color: var(--gp-muted-color);">Bandeira:</dt>
                                    <dd class="col-sm-7 mb-2">
                                        <span class="badge text-bg-@(Model.Bandeira == "Verde" ? "success" : Model.Bandeira == "Amarela" ? "warning" : Model.Bandeira == "Vermelha" ? "danger" : "dark")">
                                            @Model.Bandeira
                                        </span>
                                    </dd>

                                    <dt class="col-sm-5" style="color: var(--gp-muted-color);">Prioridade:</dt>
                                    <dd class="col-sm-7 mb-2">
                                        <span class="badge text-bg-@(Model.Prioridade == "Crítica" ? "danger" : Model.Prioridade == "Alta" ? "warning" : Model.Prioridade == "Normal" ? "info" : "secondary")">
                                            @Model.Prioridade
                                        </span>
                                    </dd>

                                    <dt class="col-sm-5" style="color: var(--gp-muted-color);">Progresso:</dt>
                                    <dd class="col-sm-7 mb-0">
                                        <div class="progress" style="height: 24px;">
                                            <div class="progress-bar @(Model.PercentualConclusao >= 80 ? "bg-success" : Model.PercentualConclusao >= 50 ? "bg-warning" : "bg-danger")" 
                                                 role="progressbar" 
                                                 style="width: @Model.PercentualConclusao%" 
                                                 aria-valuenow="@Model.PercentualConclusao" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                                @Model.PercentualConclusao.ToString("F1")%
                                            </div>
                                        </div>
                                    </dd>
                                </dl>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 rounded border" style="background-color: var(--gp-card-accent); border-color: var(--gp-card-border) !important;">
                                <h6 class="text-uppercase small mb-3 fw-bold" style="color: var(--gp-heading-color);">
                                    <i class="fas fa-calendar-alt me-2"></i>Datas e Peso
                                </h6>
                                <dl class="row mb-0">
                                    <dt class="col-sm-5" style="color: var(--gp-muted-color);">Data Início:</dt>
                                    <dd class="col-sm-7 mb-2" style="color: var(--gp-body-color);">
                                        <i class="fas fa-calendar text-primary me-2"></i>@Model.DataInicio.ToString("dd/MM/yyyy")
                                    </dd>

                                    <dt class="col-sm-5" style="color: var(--gp-muted-color);">Data Término:</dt>
                                    <dd class="col-sm-7 mb-2" style="color: var(--gp-body-color);">
                                        <i class="fas fa-calendar text-primary me-2"></i>@Model.DataTermino.ToString("dd/MM/yyyy")
                                    </dd>

                                    @if (Model.DataConclusao.HasValue)
                                    {
                                        <dt class="col-sm-5" style="color: var(--gp-muted-color);">Data Conclusão:</dt>
                                        <dd class="col-sm-7 mb-2" style="color: var(--gp-body-color);">
                                            <i class="fas fa-check-circle text-success me-2"></i>@Model.DataConclusao.Value.ToString("dd/MM/yyyy")
                                        </dd>
                                    }

                                    <dt class="col-sm-5" style="color: var(--gp-muted-color);">Peso Final:</dt>
                                    <dd class="col-sm-7 mb-2">
                                        <span class="badge text-bg-info">@Model.PesoFinal.ToString("F0") kg</span>
                                    </dd>

                                    <dt class="col-sm-5" style="color: var(--gp-muted-color);">Peso Produzido:</dt>
                                    <dd class="col-sm-7 mb-0">
                                        <span class="badge text-bg-success">@Model.PesoProduzido.ToString("F0") kg</span>
                                    </dd>
                                </dl>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Observacoes))
                        {
                            <div class="col-12">
                                <div class="p-3 rounded border" style="background-color: var(--gp-card-accent); border-color: var(--gp-card-border) !important;">
                                    <h6 class="text-uppercase small mb-2 fw-bold" style="color: var(--gp-heading-color);">
                                        <i class="fas fa-sticky-note me-2"></i>Observações
                                    </h6>
                                    <p class="mb-0" style="color: var(--gp-body-color);">@Model.Observacoes</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow border-0 mb-3">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-chart-pie me-2"></i>Resumo
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0">
                            <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="fas fa-weight text-white"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <small class="d-block" style="color: var(--gp-muted-color);">Produzido / Total</small>
                            <strong style="color: var(--gp-body-color);">@Model.PesoProduzido.ToString("F0") / @Model.PesoFinal.ToString("F0") kg</strong>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0">
                            <div class="rounded-circle bg-success d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="fas fa-percent text-white"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <small class="d-block" style="color: var(--gp-muted-color);">Conclusão</small>
                            <strong style="color: var(--gp-body-color);">@Model.PercentualConclusao.ToString("F1")%</strong>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="rounded-circle bg-info d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="fas fa-user text-white"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <small class="d-block" style="color: var(--gp-muted-color);">Responsável</small>
                            <strong style="color: var(--gp-body-color);">@(Model.Usuario?.NomeUsuario ?? "Não informado")</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
