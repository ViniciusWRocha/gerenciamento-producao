@model IEnumerable<GerenciamentoProducao.Models.Obra>
@* @model IEnumerable<GerenciamentoProducao.ViewModel.ObraViewModel> *@

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Construtora)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Cnpj)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Logradouro)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Usuario)
			</th>
			<th>
				Ações
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Construtora)
				</td>
				<td>
				@Html.DisplayFor(modelItem => item.Cnpj)
				</td>
				<td>
					@($"{item.Logradouro} {item.Nro} {item.Bairro} {item.Uf} {item.Cep}")
				</td>
				<td>
				@Html.DisplayFor(modelItem => item.Usuario.NomeUsuario)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.IdObra">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.IdObra">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.IdObra">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
