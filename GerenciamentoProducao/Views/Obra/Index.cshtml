@model IEnumerable<GerenciamentoProducao.Models.Obra>

@{
    ViewData["Title"] = "Obras";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0 text-white">Obras</h1>
            <p class="text-muted">Gerenciamento de obras e projetos</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Lista de Obras</h6>
                    <a asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Nova Obra
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Construtora</th>
                                    <th>Período</th>
                                    <th>Peso</th>
                                    <th>Progresso</th>
                                    <th>Status</th>
                                    <th>Bandeira</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.Nome</strong>
                                            @if (!string.IsNullOrEmpty(item.Observacoes))
                                            {
                                                <br><small class="text-muted">@item.Observacoes</small>
                                            }
                                        </td>
                                        <td>@item.Construtora</td>
                                        <td>
                                            <small>
                                                <strong>Início:</strong> @item.DataInicio.ToString("dd/MM/yyyy")<br>
                                                <strong>Término:</strong> @item.DataTermino.ToString("dd/MM/yyyy")
                                            </small>
                                        </td>
                                        <td>
                                            <small>
                                                <strong>Final:</strong> @item.PesoFinal.ToString("F0") kg<br>
                                                <strong>Produzido:</strong> @item.PesoProduzido.ToString("F0") kg
                                            </small>
                                        </td>
                                        <td>
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar @(item.PercentualConclusao >= 80 ? "bg-success" : item.PercentualConclusao >= 50 ? "bg-warning" : "bg-danger")" 
                                                     role="progressbar" 
                                                     style="width: @item.PercentualConclusao%" 
                                                     aria-valuenow="@item.PercentualConclusao" 
                                                     aria-valuemin="0" 
                                                     aria-valuemax="100">
                                                    @item.PercentualConclusao.ToString("F1")%
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge badge-@(item.StatusObra == "Concluída" ? "success" : item.StatusObra == "Em Andamento" ? "primary" : item.StatusObra == "Atrasada" ? "danger" : "secondary")">
                                                @item.StatusObra
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge badge-@(item.Bandeira == "Verde" ? "success" : item.Bandeira == "Amarela" ? "warning" : item.Bandeira == "Vermelha" ? "danger" : "dark")">
                                                @item.Bandeira
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@item.IdObra" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.IdObra" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.IdObra" class="btn btn-sm btn-danger">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>