            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PesoUnitario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Obra)
            </th>
