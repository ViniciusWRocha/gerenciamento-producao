@model GerenciamentoProducaoo.ViewModel.CaixilhoViewModel

@{
    ViewData["Title"] = "Novo Caixilho";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0 text-white">Novo Caixilho</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Dados do Caixilho</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="NomeCaixilho" class="control-label">Nome do Caixilho</label>
                                    <input asp-for="NomeCaixilho" class="form-control" />
                                    <span asp-validation-for="NomeCaixilho" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Quantidade" class="control-label">Quantidade</label>
                                    <input asp-for="Quantidade" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Largura" class="control-label">Largura (cm)</label>
                                    <input asp-for="Largura" class="form-control" type="number" step="0.1" />
                                    <span asp-validation-for="Largura" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Altura" class="control-label">Altura (cm)</label>
                                    <input asp-for="Altura" class="form-control" type="number" step="0.1" />
                                    <span asp-validation-for="Altura" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PesoUnitario" class="control-label">Peso Unitário (kg)</label>
                                    <input asp-for="PesoUnitario" class="form-control" type="number" step="0.1" />
                                    <span asp-validation-for="PesoUnitario" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="StatusProducao" class="control-label">Status de Produção</label>
                                    <select asp-for="StatusProducao" class="form-control">
                                        <option value="Pendente" selected>Pendente</option>
                                        <option value="Em Produção">Em Produção</option>
                                        <option value="Concluído">Concluído</option>
                                    </select>
                                    <span asp-validation-for="StatusProducao" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ObraId" class="control-label">Obra</label>
                                    <select asp-for="ObraId" class="form-control" asp-items="Model.Obra"></select>
                                    <span asp-validation-for="ObraId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FamiliaCaixilhoId" class="control-label">Família de Caixilho</label>
                                    <select asp-for="FamiliaCaixilhoId" class="form-control" asp-items="Model.FamiliaCaixilho"></select>
                                    <span asp-validation-for="FamiliaCaixilhoId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="TipoCaixilhoId" class="control-label">Tipo de Caixilho</label>
                            <select asp-for="TipoCaixilhoId" class="form-control" asp-items="Model.TipoCaixilho"></select>
                            <span asp-validation-for="TipoCaixilhoId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="form-check">
                                <input asp-for="Liberado" class="form-check-input" type="checkbox" />
                                <label asp-for="Liberado" class="form-check-label">
                                    Liberado para Produção
                                </label>
                            </div>
                            <small class="form-text text-muted">Marque se o caixilho está liberado para produção</small>
                        </div>

                        <div class="form-group">
                            <label asp-for="Observacoes" class="control-label">Observações</label>
                            <textarea asp-for="Observacoes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Observacoes" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirmModal">
                                <i class="fas fa-save"></i> Salvar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Informações</h6>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        <strong>Caixilho:</strong> Estrutura de alumínio para esquadrias
                    </p>
                    <p class="text-muted">
                        <strong>Liberação:</strong> Necessária para produção
                    </p>
                    <p class="text-muted">
                        <strong>Família:</strong> Grupo de caixilhos relacionados
                    </p>
                    <p class="text-muted">
                        <strong>Peso:</strong> Calculado automaticamente
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Confirmação -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning"></i> Confirmar Atribuição
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Você está prestes a atribuir este caixilho à obra selecionada.</p>
                <div class="alert alert-info">
                    <strong>Resumo da Atribuição:</strong>
                    <ul class="mb-0 mt-2">
                        <li><strong>Caixilho:</strong> <span id="modalNomeCaixilho"></span></li>
                        <li><strong>Obra:</strong> <span id="modalNomeObra"></span></li>
                        <li><strong>Quantidade:</strong> <span id="modalQuantidade"></span></li>
                        <li><strong>Peso Total:</strong> <span id="modalPesoTotal"></span> kg</li>
                    </ul>
                </div>
                <p class="text-muted">Esta ação irá vincular o caixilho à obra e atualizar os cálculos de peso automaticamente.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Cancelar
                </button>
                <button type="button" class="btn btn-primary" id="confirmSubmit">
                    <i class="fas fa-check"></i> Confirmar e Salvar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const confirmModal = document.getElementById('confirmModal');
            const confirmSubmitBtn = document.getElementById('confirmSubmit');
            
            // Preencher dados do modal
            function updateModalData() {
                const nomeCaixilho = document.querySelector('input[name="NomeCaixilho"]').value;
                const obraSelect = document.querySelector('select[name="ObraId"]');
                const obraText = obraSelect.options[obraSelect.selectedIndex].text;
                const quantidade = document.querySelector('input[name="Quantidade"]').value;
                const pesoUnitario = document.querySelector('input[name="PesoUnitario"]').value;
                const pesoTotal = (parseFloat(pesoUnitario) * parseInt(quantidade)).toFixed(2);
                
                document.getElementById('modalNomeCaixilho').textContent = nomeCaixilho || 'Não informado';
                document.getElementById('modalNomeObra').textContent = obraText || 'Não selecionada';
                document.getElementById('modalQuantidade').textContent = quantidade || '0';
                document.getElementById('modalPesoTotal').textContent = pesoTotal || '0.00';
            }
            
            // Abrir modal e atualizar dados
            document.querySelector('button[data-bs-target="#confirmModal"]').addEventListener('click', function(e) {
                e.preventDefault();
                
                // Validar formulário antes de abrir modal
                if (form.checkValidity()) {
                    updateModalData();
                    const modal = new bootstrap.Modal(confirmModal);
                    modal.show();
                } else {
                    form.reportValidity();
                }
            });
            
            // Confirmar e submeter
            confirmSubmitBtn.addEventListener('click', function() {
                form.submit();
            });
        });
    </script>
}