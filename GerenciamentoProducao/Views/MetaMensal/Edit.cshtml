@model GerenciamentoProducao.Models.MetaMensal

@{
    ViewData["Title"] = "Editar Meta Mensal";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0 text-white">Editar Meta Mensal</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Dados da Meta</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdMetaMensal" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Ano" class="control-label">Ano</label>
                                    <input asp-for="Ano" class="form-control" />
                                    <span asp-validation-for="Ano" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Mes" class="control-label">Mês</label>
                                    <select asp-for="Mes" class="form-control">
                                        <option value="1">Janeiro</option>
                                        <option value="2">Fevereiro</option>
                                        <option value="3">Março</option>
                                        <option value="4">Abril</option>
                                        <option value="5">Maio</option>
                                        <option value="6">Junho</option>
                                        <option value="7">Julho</option>
                                        <option value="8">Agosto</option>
                                        <option value="9">Setembro</option>
                                        <option value="10">Outubro</option>
                                        <option value="11">Novembro</option>
                                        <option value="12">Dezembro</option>
                                    </select>
                                    <span asp-validation-for="Mes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="MetaPesoKg" class="control-label">Meta de Peso (Kg)</label>
                            <input asp-for="MetaPesoKg" class="form-control" />
                            <span asp-validation-for="MetaPesoKg" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Observacoes" class="control-label">Observações</label>
                            <textarea asp-for="Observacoes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Observacoes" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Salvar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Status Atual</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Peso Produzido:</strong> @Model.PesoProduzido.ToString("F0") kg
                    </div>
                    <div class="mb-3">
                        <strong>Percentual Atingido:</strong> @Model.PercentualAtingido.ToString("F1")%
                    </div>
                    <div class="mb-3">
                        <strong>Status:</strong> 
                        @if (Model.MetaAtingida)
                        {
                            <span class="badge badge-success">Atingida</span>
                        }
                        else if (Model.PercentualAtingido >= 80)
                        {
                            <span class="badge badge-warning">Próximo</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">Atrasada</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
