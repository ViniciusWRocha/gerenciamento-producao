@model GerenciamentoProducao.Models.MetaMensal

@{
    ViewData["Title"] = "Excluir Meta Mensal";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0 text-gray-800">Excluir Meta Mensal</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-danger">Confirmação de Exclusão</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Atenção!</strong> Tem certeza que deseja excluir esta meta mensal?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Ano:</dt>
                        <dd class="col-sm-9">@Model.Ano</dd>

                        <dt class="col-sm-3">Mês:</dt>
                        <dd class="col-sm-9">@Model.Mes</dd>

                        <dt class="col-sm-3">Meta de Peso:</dt>
                        <dd class="col-sm-9">@Model.MetaPesoKg.ToString("F0") kg</dd>

                        <dt class="col-sm-3">Peso Produzido:</dt>
                        <dd class="col-sm-9">@Model.PesoProduzido.ToString("F0") kg</dd>

                        <dt class="col-sm-3">Percentual Atingido:</dt>
                        <dd class="col-sm-9">@Model.PercentualAtingido.ToString("F1")%</dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">
                            @if (Model.MetaAtingida)
                            {
                                <span class="badge badge-success">Meta Atingida</span>
                            }
                            else if (Model.PercentualAtingido >= 80)
                            {
                                <span class="badge badge-warning">Próximo da Meta</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Atrasada</span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdMetaMensal" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Confirmar Exclusão
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Impacto da Exclusão</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Importante:</strong> Esta ação não pode ser desfeita.
                    </div>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> Dados históricos serão perdidos</li>
                        <li><i class="fas fa-check text-success"></i> Relatórios serão afetados</li>
                        <li><i class="fas fa-check text-success"></i> Métricas do dashboard serão recalculadas</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
