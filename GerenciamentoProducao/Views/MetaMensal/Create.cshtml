@model GerenciamentoProducao.Models.MetaMensal

@{
    ViewData["Title"] = "Nova Meta Mensal";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0 text-gray-800">Nova Meta Mensal</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Dados da Meta</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Ano" class="control-label">Ano</label>
                                    <input asp-for="Ano" class="form-control" value="@DateTime.Now.Year" />
                                    <span asp-validation-for="Ano" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Mes" class="control-label">Mês</label>
                                    <select asp-for="Mes" class="form-control">
                                        <option value="1">Janeiro</option>
                                        <option value="2">Fevereiro</option>
                                        <option value="3">Março</option>
                                        <option value="4">Abril</option>
                                        <option value="5">Maio</option>
                                        <option value="6">Junho</option>
                                        <option value="7">Julho</option>
                                        <option value="8">Agosto</option>
                                        <option value="9">Setembro</option>
                                        <option value="10">Outubro</option>
                                        <option value="11">Novembro</option>
                                        <option value="12">Dezembro</option>
                                    </select>
                                    <span asp-validation-for="Mes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="MetaPesoKg" class="control-label">Meta de Peso (Kg)</label>
                            <input asp-for="MetaPesoKg" class="form-control" value="30000" />
                            <small class="form-text text-muted">Meta padrão: 30.000 kg (30 toneladas)</small>
                            <span asp-validation-for="MetaPesoKg" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Observacoes" class="control-label">Observações</label>
                            <textarea asp-for="Observacoes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Observacoes" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Salvar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Informações</h6>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        <strong>Meta Mensal:</strong> 30 toneladas (30.000 kg)
                    </p>
                    <p class="text-muted">
                        <strong>Objetivo:</strong> Controle de produção mensal
                    </p>
                    <p class="text-muted">
                        <strong>Status:</strong> Será calculado automaticamente
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
