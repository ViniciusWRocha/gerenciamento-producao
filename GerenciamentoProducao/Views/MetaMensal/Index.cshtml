@model IEnumerable<GerenciamentoProducao.Models.MetaMensal>

@{
    ViewData["Title"] = "Metas Mensais";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0 text-gray-800">Metas Mensais</h1>
            <p class="text-muted">Controle de metas de produção mensais</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Lista de Metas</h6>
                    <a asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Nova Meta
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Ano</th>
                                    <th>Mês</th>
                                    <th>Meta (Kg)</th>
                                    <th>Peso Produzido (Kg)</th>
                                    <th>% Atingido</th>
                                    <th>Status</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Ano</td>
                                        <td>@item.Mes</td>
                                        <td>@item.MetaPesoKg.ToString("F0")</td>
                                        <td>@item.PesoProduzido.ToString("F0")</td>
                                        <td>
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar @(item.PercentualAtingido >= 100 ? "bg-success" : item.PercentualAtingido >= 80 ? "bg-warning" : "bg-danger")" 
                                                     role="progressbar" 
                                                     style="width: @(Math.Min(item.PercentualAtingido, 100))%" 
                                                     aria-valuenow="@item.PercentualAtingido" 
                                                     aria-valuemin="0" 
                                                     aria-valuemax="100">
                                                    @item.PercentualAtingido.ToString("F1")%
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @if (item.MetaAtingida)
                                            {
                                                <span class="badge badge-success">Atingida</span>
                                            }
                                            else if (item.PercentualAtingido >= 80)
                                            {
                                                <span class="badge badge-warning">Próximo</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Atrasada</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.IdMetaMensal" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.IdMetaMensal" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.IdMetaMensal" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
