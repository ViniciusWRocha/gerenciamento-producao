        </div>
        <div class="col-md-6 col-12 d-flex justify-content-md-end justify-content-start mt-2 mt-md-0 gap-2 align-items-center">
            <form asp-action="ImportarObras" enctype="multipart/form-data" method="post" class="d-flex align-items-center gap-2">
                <input type="file" name="arquivosXml" accept=".xml" multiple class="form-control form-control-sm" />
                <button type="submit" class="btn btn-primary btn-sm">Importar XML</button>
            </form>
           
        </div>
    </div>
    @if (ViewBag.Resultados != null)
    {
        <div class="row mb-3">
            <div class="col-12">
                <ul class="mb-0">
                    @foreach (var resultado in (List<string>)ViewBag.Resultados)
                    {
                        <li>@resultado</li>
                    }
                </ul>
            </div>
        </div>
    }
</div>
